{
  "manifest_version": 2,
  "name": "Avac",
  "version": "1.0.012",
  "icons": {
    "64": "img/64.png"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/popup.js",
        "js/content.js",
        "js/common.js",
        //100k words
        "js/dictionaries/eng_rus/eng.js",
        "js/dictionaries/eng_rus/rus.js"
      ],
      "css": [
        "css/popup.css",
        "css/content.css"
      ]
    }
  ],
  "permissions": [
    "tts",
    //text-to-speech
    "storage",
    "activeTab"
  ],
  "browser_action": {
    "default_title": "Air Article Translator",
    "default_icon": "img/64.png",
    "default_popup": "html/popup.html"
  }
}
