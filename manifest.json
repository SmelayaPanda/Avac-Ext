{
  "manifest_version": 2,
  "name": "Avac",
  "version": "1.0.009",
  "icons": {
    "64": "img/64.png"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/popup.js",
        "js/content.js",
        "js/option.js",
        "js/footer.js",
        "js/common.js"
      ],
      "css": [
        "css/popup.css",
        "css/content.css",
        "css/option.css",
        "css/footer.css"
      ]
    }
  ],
  "permissions": [
    /*"tabs",*/
    "tts",
    "storage",
    "activeTab",
    "https://panda.jelastic.regruhosting.ru/*",
    "http://fonts.googleapis.com/",
    "https://fonts.googleapis.com/"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "browser_action": {
    "default_title": "Air Article Translator",
    "default_icon": "img/64.png",
    "default_popup": "html/popup.html",
    "options_page": "html/options.html"
  }
}